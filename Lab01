class Solution {
public:
    bool isMonotonic(vector<int>& nums) {
        bool up = 1;
        bool down = 1;
        
        for (int i = 0; i < nums.size()-1; i++) {
            if (nums[i] > nums[i + 1]) 
                up = 0;
            if (nums[i] < nums[i + 1]) 
                down = 0;
        }
        return up||down;
    }
};
